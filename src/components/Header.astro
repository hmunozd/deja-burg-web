---
const whatsappNumber = "573236588465";
---

<div class="sticky top-0 z-50 w-full bg-bg-main/90 backdrop-blur-lg border-b border-border-subtle">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <header class="flex items-center justify-between h-16 sm:h-20">
            <div class="flex items-center gap-2 sm:gap-3">
                <div class="size-8 sm:size-10 rounded-full bg-primary/10 flex items-center justify-center text-primary border border-primary/20">
                    <span class="material-symbols-outlined text-xl sm:text-2xl">lunch_dining</span>
                </div>
                <h2 class="text-white text-lg sm:text-2xl font-display font-bold tracking-wide">DEJA BURG</h2>
            </div>
            
            <nav class="hidden md:flex items-center gap-8">
                <a class="text-sm font-bold uppercase tracking-wider text-gray-400 hover:text-primary transition-colors" href="#">Inicio</a>
                <a class="text-sm font-bold uppercase tracking-wider text-primary" href="#">Men√∫</a>
                <a class="text-sm font-bold uppercase tracking-wider text-gray-400 hover:text-primary transition-colors" href="#">Promos</a>
                <a class="text-sm font-bold uppercase tracking-wider text-gray-400 hover:text-primary transition-colors" href="#">Locales</a>
                <button 
                    id="header-cart-btn"
                    class="relative group flex items-center justify-center gap-2 rounded-full px-6 py-2.5 bg-accent-red hover:bg-red-600 transition-all text-white font-display font-bold uppercase tracking-wide shadow-[0_0_15px_rgba(217,4,41,0.3)] hover:shadow-[0_0_20px_rgba(217,4,41,0.5)] cursor-pointer"
                >
                    <span class="material-symbols-outlined text-[20px]">shopping_cart</span>
                    <span>Pedir</span>
                    <span
                        id="header-cart-badge"
                        class="absolute -top-1 -right-1 size-5 bg-primary text-black text-xs font-bold rounded-full flex items-center justify-center shadow-lg opacity-0 scale-0 transition-all duration-300"
                    >
                        0
                    </span>
                </button>
            </nav>
            
            <!-- Mobile Order Button + Menu -->
            <div class="flex md:hidden items-center gap-2">
                <button 
                    id="mobile-cart-btn"
                    class="relative flex items-center justify-center gap-1.5 rounded-full px-4 py-2 bg-accent-red text-white font-display font-bold uppercase text-xs tracking-wide shadow-lg cursor-pointer active:scale-95 transition-transform"
                >
                    <span class="material-symbols-outlined text-base">shopping_cart</span>
                    <span>Pedir</span>
                    <span
                        id="mobile-cart-badge"
                        class="absolute -top-1 -right-1 size-5 bg-primary text-black text-xs font-bold rounded-full flex items-center justify-center shadow-lg opacity-0 scale-0 transition-all duration-300"
                    >
                        0
                    </span>
                </button>
                <button class="p-2 text-gray-300 hover:text-white cursor-pointer active:scale-95 transition-transform">
                    <span class="material-symbols-outlined text-2xl">menu</span>
                </button>
            </div>
        </header>
    </div>
</div>

<script>
  import { getCartCount, onCartUpdate, formatCartForWhatsApp } from '../utils/cartStore';
  
  const whatsappNumber = "573236588465";
  
  function updateHeaderBadges() {
    const headerBadge = document.getElementById('header-cart-badge');
    const mobileBadge = document.getElementById('mobile-cart-badge');
    const count = getCartCount();
    
    [headerBadge, mobileBadge].forEach(badge => {
      if (badge) {
        badge.textContent = count.toString();
        
        if (count > 0) {
          badge.classList.add('cart-badge-visible');
        } else {
          badge.classList.remove('cart-badge-visible');
        }
      }
    });
  }
  
  function handleCartButtonClick() {
    const count = getCartCount();
    
    if (count === 0) {
      const message = formatCartForWhatsApp();
      window.open(`https://wa.me/${whatsappNumber}?text=${encodeURIComponent(message)}`, '_blank');
    } else {
      const modal = document.getElementById('cart-modal');
      if (modal) {
        modal.classList.remove('hidden');
        modal.classList.add('flex');
      }
    }
  }
  
  document.addEventListener('DOMContentLoaded', () => {
    updateHeaderBadges();
    
    onCartUpdate(() => {
      updateHeaderBadges();
    });
    
    const headerBtn = document.getElementById('header-cart-btn');
    const mobileBtn = document.getElementById('mobile-cart-btn');
    
    headerBtn?.addEventListener('click', handleCartButtonClick);
    mobileBtn?.addEventListener('click', handleCartButtonClick);
  });
</script>

<style>
  .cart-badge-visible {
    opacity: 1 !important;
    scale: 1 !important;
  }
</style>

