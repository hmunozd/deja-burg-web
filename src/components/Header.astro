            </nav>
            
            <!-- Mobile Order Button + Menu -->
            <div class="flex md:hidden items-center gap-2">
                <a 
                    href={whatsappUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center justify-center gap-1.5 rounded-full px-4 py-2 bg-accent-red text-white font-display font-bold uppercase text-xs tracking-wide shadow-lg cursor-pointer active:scale-95 transition-transform"
                >
                    <span class="material-symbols-outlined text-base">shopping_cart</span>
                    <span>Pedir</span>
                </a>
                <button class="p-2 text-gray-300 hover:text-white cursor-pointer active:scale-95 transition-transform">
                    <span class="material-symbols-outlined text-2xl">menu</span>
                </button>
            </div>
        </header>
    </div>
</div>
