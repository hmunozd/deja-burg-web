---
import { menuData } from '../data/menu.ts';
import CategoryFilter from '../components/menu/CategoryFilter.astro';
import MenuCategory from '../components/menu/MenuCategory.astro';

const categories = menuData.map(cat => ({ id: cat.id, title: cat.title }));
---

<section id="menu">
    <CategoryFilter categories={categories} />
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12 flex flex-col gap-12 sm:gap-16">
        {menuData.map(category => (
            <MenuCategory 
                category={category}
            />
        ))}
    </div>
</section>

