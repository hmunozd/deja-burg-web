---
const whatsappNumber = "573236588465";
const phoneDisplay = "323 6588465";
const whatsappUrl = `https://wa.me/${whatsappNumber}`;

const mapEmbedUrl = "https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d495.769733754253!2d-75.5399637657388!3d6.242915091050667!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ses-419!2sco!4v1767071455677!5m2!1ses-419!2sco";
---

<section class="w-full bg-bg-main border-t border-border-subtle overflow-hidden">
    <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 min-h-[600px]">
            <!-- Left Side - Contact Information -->
            <div class="bg-gradient-to-br from-bg-main via-bg-card to-bg-main p-8 sm:p-12 lg:p-16 flex flex-col justify-center relative overflow-hidden">
                <!-- Background Pattern -->
                <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/dark-matter.png')] opacity-20"></div>
                <div class="absolute top-0 right-0 w-64 h-64 bg-primary/5 rounded-full blur-3xl"></div>
                
                <div class="relative z-10">
                    <!-- Badge -->
                    <div class="inline-flex items-center gap-2 mb-6">
                        <span class="size-2 rounded-full bg-accent-red animate-pulse"></span>
                        <span class="text-accent-red font-display font-bold uppercase text-xs tracking-[0.2em]">Abierto Ahora</span>
                    </div>

                    <!-- Title -->
                    <h2 class="font-display text-4xl sm:text-5xl lg:text-6xl font-bold uppercase leading-none tracking-tight text-white mb-6">
                        Visítanos<br/>
                        <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-accent-red">En el Centro</span>
                    </h2>

                    <!-- Description -->
                    <p class="text-gray-400 text-base sm:text-lg leading-relaxed mb-10 max-w-md">
                        Deja Burg — El auténtico sabor urbano en una atmósfera única. Ven por la hamburguesa, quédate por la experiencia.
                    </p>

                    <!-- Contact Details -->
                    <div class="space-y-6 mb-10">
                        <!-- Dirección -->
                        <div class="flex items-start gap-4 group">
                            <div class="size-12 rounded-full bg-primary/10 flex items-center justify-center border border-primary/20 shrink-0 group-hover:bg-primary/20 transition-colors">
                                <span class="material-symbols-outlined text-2xl text-primary">location_on</span>
                            </div>
                            <div>
                                <h3 class="font-display font-bold uppercase text-white text-sm tracking-wider mb-1">Dirección</h3>
                                <p class="text-gray-400 text-sm leading-relaxed">Servicio a domicilio<br/>Consulta cobertura disponible</p>
                            </div>
                        </div>

                        <!-- Horario -->
                        <div class="flex items-start gap-4 group">
                            <div class="size-12 rounded-full bg-accent-red/10 flex items-center justify-center border border-accent-red/20 shrink-0 group-hover:bg-accent-red/20 transition-colors">
                                <span class="material-symbols-outlined text-2xl text-accent-red">schedule</span>
                            </div>
                            <div>
                                <h3 class="font-display font-bold uppercase text-white text-sm tracking-wider mb-1">Horario</h3>
                                <p class="text-gray-400 text-sm">Lun, Mié, Jue y Vie: 6:00 PM - 10:40 PM</p>
                                <p class="text-gray-400 text-sm">Sábado: 12:00 PM - 11:30 PM</p>
                                <p class="text-gray-400 text-sm">Domingo: 5:30 PM - 11:00 PM</p>
                                <p class="text-gray-500 text-xs mt-1 italic">Martes: Cerrado</p>
                            </div>
                        </div>

                        <!-- Reservaciones -->
                        <div class="flex items-start gap-4 group">
                            <div class="size-12 rounded-full bg-accent-green/10 flex items-center justify-center border border-accent-green/20 shrink-0 group-hover:bg-accent-green/20 transition-colors">
                                <span class="material-symbols-outlined text-2xl text-accent-green">call</span>
                            </div>
                            <div>
                                <h3 class="font-display font-bold uppercase text-white text-sm tracking-wider mb-1">Pedidos</h3>
                                <a 
                                    href={whatsappUrl}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-accent-green hover:text-accent-green/80 transition-colors text-base font-medium"
                                >
                                    +57 {phoneDisplay}
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- CTA Buttons -->
                    <div class="flex flex-col sm:flex-row gap-4">
                        <a 
                            href={whatsappUrl}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-primary hover:bg-primary/90 text-black font-display font-bold uppercase text-sm tracking-wider rounded-btn transition-all shadow-lg hover:shadow-xl active:scale-95"
                        >
                            <span class="material-symbols-outlined text-xl">directions</span>
                            Cómo llegar
                        </a>
                        <a 
                            href={whatsappUrl}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-border-subtle hover:bg-white hover:text-bg-main text-white font-display font-bold uppercase text-sm tracking-wider rounded-btn transition-all active:scale-95"
                        >
                            <span class="material-symbols-outlined text-xl">share</span>
                            Compartir
                        </a>
                    </div>
                </div>
            </div>

            <!-- Right Side - Map -->
            <div class="relative min-h-[400px] lg:min-h-full bg-gray-800">
                <!-- Map Embed -->
                <iframe
                    src={mapEmbedUrl}
                    class="absolute inset-0 w-full h-full border-0"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                    title="Ubicación de Deja Burg"
                ></iframe>
                
                <!-- Map Overlay Card -->
                <div class="absolute bottom-6 left-6 right-6 bg-bg-card/95 backdrop-blur-md border border-border-subtle rounded-card p-4 shadow-2xl">
                    <div class="flex items-start gap-3">
                        <div class="size-10 rounded-full bg-primary flex items-center justify-center shrink-0">
                            <span class="material-symbols-outlined text-xl text-black">restaurant</span>
                        </div>
                        <div class="flex-1 min-w-0">
                            <h4 class="font-display font-bold text-white text-base mb-1">Deja Burg Centro</h4>
                            <div class="flex items-center gap-2 mb-1">
                                <span class="text-primary text-sm">★</span>
                                <span class="text-white text-sm font-medium">4.9</span>
                                <span class="text-gray-500 text-xs">(2.4k reseñas)</span>
                            </div>
                            <p class="text-gray-400 text-xs">Hamburguesas • Comida rápida</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes pulse {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0.5;
        }
    }
    
    .animate-pulse {
        animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
</style>
