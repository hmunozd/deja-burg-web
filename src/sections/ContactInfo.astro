---
const CONTACT_INFO = {
  whatsapp: {
    number: "573236588465",
    display: "323 6588465"
  },
  location: {
    name: "Deja Burg",
    address: "Al lado del Depósito La Terminal",
    mapUrl: "https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d495.769733754253!2d-75.5399637657388!3d6.242915091050667!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e44286350a32e9f%3A0x48c55b5d954a9bdd!2sDep%C3%B3sito%20La%20Terminal!5e0!3m2!1ses-419!2sco!4v1767395855616!5m2!1ses-419!2sco"
  },
  schedule: [
    { days: "Lun, Mié, Jue y Vie", hours: "6:00 PM - 10:40 PM" },
    { days: "Sábado", hours: "12:00 PM - 11:30 PM" },
    { days: "Domingo", hours: "5:30 PM - 11:00 PM" },
    { days: "Martes", hours: "Cerrado", isClosed: true }
  ]
};

const whatsappUrl = `https://wa.me/${CONTACT_INFO.whatsapp.number}`;
---

<section class="w-full bg-bg-main border-t border-border-subtle overflow-hidden">
    <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 min-h-[600px]">
            <!-- Left Side - Contact Information -->
            <div class="bg-gradient-to-br from-bg-main via-bg-card to-bg-main p-8 sm:p-12 lg:p-16 flex flex-col justify-center relative overflow-hidden">
                <!-- Background Pattern -->
                <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-20"></div>
                <div class="absolute top-0 right-0 w-64 h-64 bg-primary/5 rounded-full blur-3xl"></div>
                
                <div class="relative z-10">
                    <!-- Status Badge -->
                    <div id="status-badge" class="inline-flex items-center gap-2 mb-6">
                        <span id="status-dot" class="size-2 rounded-full bg-gray-500"></span>
                        <span id="status-text" class="text-gray-500 font-display font-bold uppercase text-xs tracking-[0.2em]">Cargando...</span>
                    </div>

                    <!-- Title -->
                    <h2 class="font-display text-4xl sm:text-5xl lg:text-6xl font-bold uppercase leading-none tracking-tight text-white mb-6">
                        Encuéntranos<br/>
                        <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-accent-red">Fácilmente</span>
                    </h2>

                    <!-- Description -->
                    <p class="text-gray-400 text-base sm:text-lg leading-relaxed mb-10 max-w-md">
                        Deja Burg — El auténtico sabor urbano en una atmósfera única. Ven por la hamburguesa, quédate por la experiencia.
                    </p>

                    <!-- Contact Details -->
                    <div class="space-y-6 mb-10">
                        <!-- Dirección -->
                        <div class="flex items-start gap-4 group">
                            <div class="size-12 rounded-full bg-primary/10 flex items-center justify-center border border-primary/20 shrink-0 group-hover:bg-primary/20 transition-colors">
                                <span class="material-symbols-outlined text-2xl text-primary">location_on</span>
                            </div>
                            <div>
                                <h3 class="font-display font-bold uppercase text-white text-sm tracking-wider mb-1">Dirección</h3>
                                <p class="text-gray-400 text-sm leading-relaxed">Servicio a domicilio<br/>Consulta cobertura disponible</p>
                            </div>
                        </div>

                        <!-- Horario -->
                        <div class="flex items-start gap-4 group">
                            <div class="size-12 rounded-full bg-accent-red/10 flex items-center justify-center border border-accent-red/20 shrink-0 group-hover:bg-accent-red/20 transition-colors">
                                <span class="material-symbols-outlined text-2xl text-accent-red">schedule</span>
                            </div>
                            <div>
                                <h3 class="font-display font-bold uppercase text-white text-sm tracking-wider mb-1">Horario</h3>
                                {CONTACT_INFO.schedule.map(({ days, hours, isClosed }) => (
                                    <p class={isClosed ? "text-gray-500 text-xs mt-1 italic" : "text-gray-400 text-sm"}>
                                        {days}: {hours}
                                    </p>
                                ))}
                            </div>
                        </div>

                        <!-- Pedidos -->
                        <div class="flex items-start gap-4 group">
                            <div class="size-12 rounded-full bg-accent-green/10 flex items-center justify-center border border-accent-green/20 shrink-0 group-hover:bg-accent-green/20 transition-colors">
                                <span class="material-symbols-outlined text-2xl text-accent-green">call</span>
                            </div>
                            <div>
                                <h3 class="font-display font-bold uppercase text-white text-sm tracking-wider mb-1">Pedidos</h3>
                                <a 
                                    href={whatsappUrl}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-accent-green hover:text-accent-green/80 transition-colors text-base font-medium"
                                >
                                    +57 {CONTACT_INFO.whatsapp.display}
                                </a>
                            </div>
                        </div>
                    </div>


                </div>
            </div>

            <!-- Right Side - Map -->
            <div class="relative min-h-[400px] lg:min-h-full bg-gray-800">
                <iframe
                    src={CONTACT_INFO.location.mapUrl}
                    class="absolute inset-0 w-full h-full border-0"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                    title="Ubicación de Deja Burg"
                ></iframe>
                
                <!-- Map Overlay Card -->
                <div class="absolute bottom-6 left-6 right-6 bg-bg-card/95 backdrop-blur-md border border-border-subtle rounded-card p-4 shadow-2xl">
                    <div class="flex items-start gap-3">
                        <div class="size-10 rounded-full bg-primary flex items-center justify-center shrink-0">
                            <span class="material-symbols-outlined text-xl text-black">restaurant</span>
                        </div>
                        <div class="flex-1 min-w-0">
                            <h4 class="font-display font-bold text-white text-base mb-1">{CONTACT_INFO.location.name}</h4>
                            <div class="flex items-center gap-2 mb-1">
                                <span class="material-symbols-outlined text-primary text-sm">location_on</span>
                                <span class="text-white text-sm font-medium">{CONTACT_INFO.location.address}</span>
                            </div>
                            <p class="text-gray-400 text-xs">Hamburguesas • Salchipapas • Comida rápida</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
  import { isRestaurantOpen } from '../utils/businessHours';
  
  const STATUS_CLASSES = {
    open: {
      dot: 'size-2 rounded-full bg-accent-green animate-pulse',
      text: 'text-accent-green font-display font-bold uppercase text-xs tracking-[0.2em]',
      label: 'Abierto Ahora'
    },
    closed: {
      dot: 'size-2 rounded-full bg-gray-500',
      text: 'text-gray-500 font-display font-bold uppercase text-xs tracking-[0.2em]',
      label: 'Cerrado'
    }
  };
  
  function updateStatus(): void {
    const statusDot = document.getElementById('status-dot');
    const statusText = document.getElementById('status-text');
    
    if (!statusDot || !statusText) return;
    
    const { isOpen } = isRestaurantOpen();
    const classes = isOpen ? STATUS_CLASSES.open : STATUS_CLASSES.closed;
    
    statusDot.className = classes.dot;
    statusText.className = classes.text;
    statusText.textContent = classes.label;
  }
  
  document.addEventListener('DOMContentLoaded', () => {
    updateStatus();
    setInterval(updateStatus, 60000);
  });
</script>

<style>
    @keyframes pulse {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0.5;
        }
    }
    
    .animate-pulse {
        animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
</style>
